{
  "permissions": {
    "allow": [
      "Bash(git checkout:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(gh pr create:*)",
      "Bash(git rm:*)",
      "Bash(gh pr view:*)",
      "Bash(gh api:*)",
      "Bash(git reset:*)",
      "Bash(gh pr merge:*)",
      "Bash(git pull:*)",
      "Bash(rcup:*)",
      "Bash(echo:*)",
      "Bash(git:*)"
    ],
    "defaultMode": "default"
  },
  "model": "opus",
  "enabledPlugins": {
    "rust-analyzer-lsp@claude-plugins-official": true
  },
  "effortLevel": "medium",
  "alwaysThinkingEnabled": true,
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline-command.sh"
  }
}
